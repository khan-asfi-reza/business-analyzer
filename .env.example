# Database Configuration (MySQL 9+)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=business_analyzer
DB_USER=business_user
DB_PASSWORD=business_password

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5671
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin_password
RABBITMQ_VHOST=/

# Celery Configuration
CELERY_BROKER_URL=amqp://admin:admin_password@localhost:5671/
CELERY_RESULT_BACKEND=rpc://

# AI Service Configuration
# Default AI provider (must be "huggingface" if omitted)
DEFAULT_AI_PROVIDER=huggingface

# HuggingFace API (Default Provider)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# OpenAI API (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (Optional)
GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration
SECRET_KEY=your_secret_key_here_change_in_production
DEBUG=True

# Session Configuration
SESSION_COOKIE_NAME=business_analyzer_session
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax